<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".AddEditNote">

    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
                                       android:id="@+id/toolbar_note">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="?attr/actionBarSize" android:layout_height="?attr/actionBarSize"
                       android:id="@+id/imgv_save"
                       android:src="@drawable/ic_save"
                       android:padding="8dp"
                       android:background="@android:color/transparent"
                       android:layout_alignParentEnd="true">
            </ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/edt_title"
              android:hint="@string/title"
              android:textColorHint="@color/grey"
              android:padding="8dp"
              android:fontFamily="@font/open_sans_medium"
              android:textStyle="bold"
              android:backgroundTint="@color/tint"
              android:textColor="@color/black"
              android:textSize="20sp"
              android:singleLine="true">
    </EditText>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/content"
              android:padding="8sp"
              android:fontFamily="@font/open_sans_regular"
              android:textColor="@color/black"
              android:textStyle="normal"
              android:backgroundTint="@color/tint"
              android:textColorHint="@color/grey"
              android:id="@+id/edt_content">

    </EditText>

</LinearLayout>